<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Navigation_Bottom_RadioButton_Style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">@dimen/navigation_bottom_height</item>
        <item name="android:button">@null</item>
        <item name="android:drawableTop">@drawable/selector_navigation_bottom_home_drawable</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@drawable/selector_navigation_bottom_home_text</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:drawablePadding">-5dp</item>
    </style>


    <style name="Navigation_Bottom_Image_Style">
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
    </style>


    <style name="Navigation_Bottom_Text_Style">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>
